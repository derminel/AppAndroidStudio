<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PageModifierWishList">

    <TextView
        android:id="@+id/nom_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Parameters"
        android:textSize="36sp"
        android:translationY="30dp" />

    <Button
        android:id="@+id/buttonChangeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Change Parameters"
        android:translationY="500dp" />

    <TextView
        android:id="@+id/PublicDB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:password="false"
        android:text='"Public"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-30dp" />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Public:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Recipient:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Admins:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="60dp" />

    <ListView
        android:id="@+id/ListViewAdmins"
        android:layout_width="199dp"
        android:layout_height="108dp"
        android:translationX="80dp"
        android:translationY="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Visible pour:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="60dp" />

    <TextView
        android:id="@+id/ListNameDB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text='"Name"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="-290dp" />

    <ImageButton
        android:id="@+id/buttonRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="-160dp"
        android:translationY="-410dp"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ListView
        android:layout_width="199dp"
        android:layout_height="108dp"
        android:translationX="80dp"
        android:translationY="-40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Creator:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-380dp" />

    <TextView
        android:id="@+id/CreatorDB"
        android:layout_width="200dp"
        android:layout_height="23dp"
        android:text='"Creator"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="-410dp" />

    <TextView
        android:id="@+id/RecipientDB"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:text='"Recipient"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="-388dp" />


</LinearLayout>