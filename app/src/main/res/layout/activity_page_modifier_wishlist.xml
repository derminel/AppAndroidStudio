<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".PageModifierWishList"
    android:background="#87cefa"
    android:orientation="vertical"
    android:padding="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start">

            <Button
                android:id="@+id/buttonRetour"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_navigate_before_black_24dp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <Button
                android:id="@+id/buttonChangeList"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_edit_white_24dp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-50dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/textNewProfile"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNameList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAccess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Public"
                android:layout_marginLeft ="30dp"
                android:layout_weight = "2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nom_liste"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:hint="Insert text"
                android:background="#FFFFFF"
                android:layout_weight = "1"
                android:layout_marginRight ="30dp"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/PublicDB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:hint="Insert text"
                android:background="#FFFFFF"
                android:layout_marginLeft ="30dp"
                android:layout_weight = "2"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNameList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Creator"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAccess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Recipient"
                android:layout_marginLeft ="30dp"
                android:layout_weight = "2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CreatorDB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:hint="Insert text"
                android:background="#FFFFFF"
                android:layout_weight = "2"
                android:layout_marginRight ="30dp"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/RecipientDB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:hint="Insert text"
                android:background="#FFFFFF"
                android:layout_marginLeft ="30dp"
                android:layout_weight = "2"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textAdmin"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Admins"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|right"
                        android:paddingTop="20dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/editAdmins"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:background="@drawable/ic_playlist_add_black_24dp"
                            style="?android:attr/borderlessButtonStyle"/>
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/ListViewAdmins"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:choiceMode="multipleChoice"
                    android:background="#FFFFFF">

                </ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textVisible"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Visible for :"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|right"
                        android:paddingTop="20dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/editVisible"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:background="@drawable/ic_playlist_add_black_24dp"
                            style="?android:attr/borderlessButtonStyle"/>
                    </LinearLayout>
                </LinearLayout>


                <ListView
                    android:id="@+id/ListViewVisible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:choiceMode="multipleChoice"
                    android:background="#FFFFFF">

                </ListView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>