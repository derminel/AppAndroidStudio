<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".PageProfil"
    android:orientation="vertical">

    <TextView
        android:id="@+id/PreferencesDB"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text='"Preferences"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationY="320dp" />

    <TextView
        android:id="@+id/AddressDB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text='"Address"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="128dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile"
        android:textSize="36sp"
        android:translationY="-130dp" />

    <Button
        android:id="@+id/buttonChangeProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Change my profile"
        android:translationY="300dp" />

    <TextView
        android:id="@+id/LastNameDB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:password="false"
        android:text='"LastName"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="-40dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-120dp" />

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Last Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-100dp" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Address:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-80dp" />

    <TextView
        android:id="@+id/textViewPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:text="Preferences:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="-60dp" />

    <TextView
        android:id="@+id/NameDB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text='"Name"'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationX="80dp"
        android:translationY="-239dp" />

    <Button
        android:id="@+id/buttonRetourAccueuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Menu"
        android:translationX="-130dp"
        android:translationY="-460dp"
        android:visibility="visible" />


</LinearLayout>