<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PageModifierWishListUpdate">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Update List"
        android:textSize="36sp"
        android:translationY="-130dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/list_nameDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Click to change the name of the list"
            android:translationY="-20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="309dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Click to change the recipient of the list"
            android:inputType="textShortMessage"
            android:translationY="-10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonSaveList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save my parameters"
        android:translationY="162dp" />

    <Switch
        android:id="@+id/switchpublic"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:text="Make the list public"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationY="-30dp" />


</LinearLayout>